{
  "name": "Athena - Personal Life Management",
  "short_name": "Athena",
  "description": "Your personal AI assistant for managing health, finance, tasks, and more",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#8b5cf6",
  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Health Tracker",
      "short_name": "Health",
      "description": "Track your health metrics",
      "url": "/health",
      "icons": [{ "src": "/icons/health-shortcut.png", "sizes": "192x192" }]
    },
    {
      "name": "Finance Tracker",
      "short_name": "Finance",
      "description": "Track your finances",
      "url": "/finance",
      "icons": [{ "src": "/icons/finance-shortcut.png", "sizes": "192x192" }]
    },
    {
      "name": "Task Planner",
      "short_name": "Planner",
      "description": "Plan your day",
      "url": "/planner",
      "icons": [{ "src": "/icons/planner-shortcut.png", "sizes": "192x192" }]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "categories": ["lifestyle", "productivity", "utilities", "health & fitness", "finance"],
  "screenshots": [],
  "scope": "/",
  "orientation": "portrait",
  "lang": "en",
  "dir": "ltr",
  "display_override": ["standalone", "window-controls-overlay"],
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [],
  "launch_handler": {
    "client_mode": "auto"
  },
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [],
  "serviceworker": {
    "src": "/api/service-worker",
    "scope": "/"
  }
} 